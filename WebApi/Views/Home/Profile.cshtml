@using Entities.Concrete
@model User

@{
	Layout = "_MyLayout";
}
<div class="container">
	<div class="row justify-content-center">
		<br />
		<hr />
		<div class="col-md-6">
			<div class="row justify-content-center">
				<div class="col-md-6">
					<h5 class="text-light">İstifadəçi Məlumatlarınız</h5>
				</div>
			</div>

			<dl class="row">
				<dt class="col-sm-3">Ad:</dt>
				<dd class="col-sm-9">@*@Model.Name*@</dd>

				<dt class="col-sm-3">Soyad:</dt>
				<dd class="col-sm-9">@*@Model.SurName*@</dd>

				<dt class="col-sm-3">İstifadəçi Adı:</dt>
				<dd class="col-sm-9">@*@Model.UserName*@</dd>

				<dt class="col-sm-3">Email:</dt>
				<dd class="col-sm-9">@*@Model.Email*@</dd>

				<dt class="col-sm-3">Departament:</dt>
				<dd class="col-sm-9">@*@Model.UserDepartments*@</dd>

				<dt class="col-sm-3">Telefon Nömrəsi:</dt>
				<dd class="col-sm-9">@*@Model.PhoneNumber*@</dd>

				<dt class="col-sm-3">Parol:</dt>
				<dd class="col-sm-9">********</dd>
			</dl>
			<hr/>

			<div class="row justify-content-center">
				<div class="col-md-6">

					<a href="@Url.Action("EditProfile")" class="btn btn-info">Dəyiş</a>
				</div>
			</div>

		</div>
	</div>


</div>
