@using Entities.Concrete
@model User

@{
	Layout = "_MyLayout";
}
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<br />
			<hr />
			<div class="row justify-content-center">
				<div class="col-md-6">
					<h5 class="text-light">İstifadəçi Məlumatlarınız</h5>
				</div>
			</div>

			@using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { enctype = "multipaart/form-data" }))
			{
				@Html.ValidationSummary(false, "", new { @class = "text-danger" })
				@Html.HiddenFor(model=>model.Id)

				<div class="form-group">
					<label for="user" class="label">Ad</label>
					@Html.EditorFor(m => m.Name, new { @class = "form-control", required = "required" })
				</div>

				<div class="form-group">
					<label for="user" class="label">Soyad</label>
					@Html.EditorFor(m => m.SurName, new { @class = "form-control", required = "required" })
				</div>

				<div class="form-group">
					<label for="user" class="label">İstifadəçi adı</label>
					@Html.EditorFor(m => m.UserName, new { @class = "form-control", required = "required" })
				</div>

				<div class="form-group">

					<label for="user" class="label">E-poçt</label>
					@Html.EditorFor(m => m.Email, new { @class = "form-control", required = "required" })
				</div>

				<div class="form-group">
					<label for="user" class="label">Telefon nömrəsi</label>
					@Html.EditorFor(m => m.PhoneNumber, new { @class = "form-control",  required = "required" })
				</div>

				<div class="form-group">
					<label for="user" class="label">Şifrə</label>
					@Html.EditorFor(m => m.Password, new { @class = "form-control", placeholder = "Yeni parol daxil edin" })
				</div>

				<br />
				<hr />
				<div class="row justify-content-center">
					<div class="col-md-6">
						<button type="submit" class="btn btn-success">Yadda saxla</button>
						<a href="@Url.Action("Profile")" class="btn btn-danger">Geri dön</a>
					</div>
				</div>
			}
		</div>
	</div>

</div>